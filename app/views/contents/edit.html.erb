<h3>You are editing this content </h3>

<form role="form" class="form-horizontal">
<%= form_for(:contents, method: "patch", url: topic_content_path(@content.topic, @content)) do |f| %>
  <div class="form-group">
    <%= f.text_field :resource, :value => @content.resource %>
      <div class="form-group">
        <%= f.submit "Submit Edits" %>
      </div>
  </div
<% end %>
</form>


<div id="link">
  <%= link_to "Return to Programming Topics", topics_path, class: "btn btn-default" %>
</div>
