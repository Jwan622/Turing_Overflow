<h3>Please contribute a new resource</h3>

<div class="form-horizontal">
  <%= form_for :contents, url: topic_contents_path do |f| %>
    <div class="form-group">
      <%= f.label :resource, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :resource, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
      <%= f.label :link, class: "col-sm-2 control-label"  %>
        <div class="col-sm-10">
          <%= f.text_field :link, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-default" %>
      </div>
    </div>
    <% end %>
</div>
