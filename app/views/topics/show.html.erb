  <h3> <%= @topic.name %> </h3>

<div id="deleted">
  <%= flash[:success] %>
</div>

  <ul>
    <% @topic.contents.each do |content| %>
      <li>
        <div class="row">
          <div class="col-xs-6">
            <%= link_to content.resource, "#{content.link}", data: { confirm: "Are you sure you want to leave to an external site?" } %>
          </div>
          <div class="col-xs-2">
            <%= link_to "Edit", edit_topic_content_path(@topic, content), id: "content_#{content.id}", class: "btn btn-sm btn-default" %>
          </div>
          <div class="col-xs-2">
            <%= link_to "Delete", topic_content_path(@topic, content), method: :delete, data: { confirm: "You sure you wanna delete this resource??" }, class: "btn btn-sm btn-default" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>

<%= link_to 'Add new resource to topic', new_topic_content_path(@topic), class: "btn btn-default"  %>

<div id="link">
  <%= link_to "Return back to Programming Topics", topics_path, class: "btn btn-default"  %>
</div>
